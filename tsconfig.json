{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "outDir": "dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true, 
    "lib": [      
      "es6",
      "dom"
    ]
  },
  "allowSyntheticDefaultImports": true, 
  "strict": false,  
  "allowJs": true,      
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}